{
  "name": "jeeves-bot",
  "version": "1.0.0",
  "description": "Discord bot for OPPEG guild",
  "main": "index.ts",
  "scripts": {
    "format": "npx prettier --write .",
    "lint": "npx eslint --fix .",
    "test": "NODE_OPTIONS=--experimental-vm-modules npx jest",
    "build": "npx tsc",
    "prepreview": "npm run build",
    "preview": "NODE_OPTIONS=--es-module-specifier-resolution=node node dist/index.js",
    "prepare": "husky install"
  },
  "author": "Jamal Lamar",
  "license": "ISC",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "type": "module",
  "jest": {
    "preset": "ts-jest/presets/default-esm",
    "globals": {
      "ts-jest": {
        "useESM": true
      }
    },
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    }
  },
  "devDependencies": {
    "@types/jest": "^27.0.2",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "dotenv": "^10.0.0",
    "eslint": "^8.2.0",
    "eslint-config-prettier": "^8.3.0",
    "husky": "^7.0.4",
    "jest": "^27.3.1",
    "lint-staged": "^12.0.2",
    "prettier": "2.4.1",
    "ts-jest": "^27.0.7",
    "typescript": "^4.4.4"
  },
  "dependencies": {
    "discord.js": "^13.3.1"
  },
  "lint-staged": {
    "*.ts": "eslint --cache --fix",
    "*.{md,json,ts}": "prettier --write"
  }
}
